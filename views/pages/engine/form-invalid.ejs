<%- include('../../fragment/header.ejs') %>
    <main>
        <h2>New Engine</h2>
        <form action="" class="form form-2">
            <label for="carNumber">Engine Series: <span class="symbol-required" class="errors-text">Field is required. </span></label>
            <input type="text" name="engineSeries" id="engineSeries" class="error-input" >

            <label for="engineSize">Size: <span class="symbol-required" class="errors-text">Field is required. </span></label>
                <select name="engineSize" id="engineSize" class="error-input">
                <option>-- Choose Size --</option>
                <option value="1">1.0 to 2.0-liters</option>
                <option value="2" selected>2.0 to 3.0-liters</option>
                <option value="3">3.0+ liters</option>
                </select>
            
                <label for="engineWeight">Weight: <span class="symbol-required" class="errors-text">Field is required. </span></label>
                <input type="number" id ="engineWeight" name="engineWeight" min ="10" max="60" step="5" class="error-input">
                <label>Provider: <span class="symbol-required" class="errors-text">Field is required. </span></label>
                <p>
                <label for="provider1" >
                    <input type="radio" id ="provider1" name="provider" value="Comies" class="error-input">
                    ComiesEA
                </label>
                <label for="provider2">
                    <input type="radio" id ="provider2" name="provider" value="Konami" class="error-input">
                    Konami Interactive
                </label>
                <label for="provider3">
                    <input type="radio" id ="provider3" name="provider" value="Capcom" class="error-input">Capcom Company
                </label>
            </p>
                <label>Material: <span class="symbol-required" class="errors-text">Field is required. </span></label>
                <select name="Material" id="material1" class="error-input">
                    <option selected>-- Choose Material --</option>
                    <option value="1">Silver</option>
                    <option value="2" >Steel</option>
                </select>
            

                <div class="form-buttons">
                    <p id = "errorSummery"> </p>
                    <input type="submit" class="form-button-submit" value="Add"  />
                    <a href="" class="form-button-cancel">Cancel</a>
                   
                </div>
            

            
        </form>
       
    
    </main>
    <%- include('../../fragment/footer.ejs') %> 